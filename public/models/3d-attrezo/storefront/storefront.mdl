export material tiles_MAT(*)
  = adobe::mtl::standard(
    opacity : adobe::util::float_texture( texture_2d("storefront/tiles_MAT_opacity.png", ::tex::gamma_linear) ),
    baseColor : adobe::util::color_texture( texture_2d("storefront/tiles_MAT_baseColor.png", ::tex::gamma_srgb) ),
    translucence : float(0.0),
    glow : adobe::util::float_texture( texture_2d("storefront/tiles_MAT_glow.png", ::tex::gamma_linear) ),
    indexOfRefraction : float(1.6),
    density : float(0.0),
    roughness : adobe::util::float_texture( texture_2d("storefront/tiles_MAT_roughness.png", ::tex::gamma_linear) ),
    normal : adobe::util::normal_texture( texture_2d("storefront/tiles_MAT_normal.png", ::tex::gamma_linear) ),
    interiorColor : color(1.0, 1.0, 1.0),
    metallic : adobe::util::float_texture( texture_2d("storefront/tiles_MAT_metallic.png", ::tex::gamma_linear) ),
    height : float(0.5),
    heightScale : float(1.0)
    );

